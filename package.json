{
  "name": "react-breakpoint-widget",
  "version": "1.0.0",
  "description": "A react component widget that shows current width information for frontend developers.",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "prepare": "husky",
    "format": "prettier .",
    "dev": "vite",
    "build": "tsc",
    "build:vite": "tsc -b && vite build",
    "lint": "eslint .",
    "format:fix": "yarn format --write",
    "preview": "vite preview"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sonangrai/react-breakpoint-indicator.git"
  },
  "keywords": [
    "react",
    "breakpoint",
    "widget"
  ],
  "author": "Sonahang Rai",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sonangrai/react-breakpoint-indicator/issues"
  },
  "homepage": "https://github.com/sonangrai/react-breakpoint-indicator#readme",
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.15.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.12.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.15.0",
    "vite": "^6.0.1"
  },
  "peerDependencies": {
    "react": "^19.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{mjs,js,ts,tsx,md,json,yaml}": [
      "yarn eslint . --fix",
      "yarn eslint .",
      "yarn format:fix"
    ]
  }
}
